<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Song Shop Database</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        .admin-container {
            max-width: 1400px;
            margin: 40px auto;
            padding: 20px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 12px;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .stat-number {
            font-size: 48px;
            font-weight: bold;
            margin: 10px 0;
        }

        .stat-label {
            font-size: 16px;
            opacity: 0.9;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .section-header h2 {
            color: var(--primary);
            margin: 0;
        }

        .refresh-btn {
            background: var(--primary);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s;
        }

        .refresh-btn:hover {
            background: var(--secondary);
            transform: translateY(-2px);
        }

        .data-table {
            width: 100%;
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 40px;
        }

        .data-table table {
            width: 100%;
            border-collapse: collapse;
        }

        .data-table th {
            background: var(--primary);
            color: white;
            padding: 15px;
            text-align: left;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 1px;
        }

        .data-table td {
            padding: 15px;
            border-bottom: 1px solid #eee;
            color: #333;
        }

        .data-table tr:hover {
            background: #f8f9fa;
        }

        .data-table tr:last-child td {
            border-bottom: none;
        }

        .album-img {
            width: 50px;
            height: 50px;
            border-radius: 6px;
            object-fit: cover;
        }

        .no-data {
            text-align: center;
            padding: 60px 20px;
            color: #999;
            font-size: 18px;
        }

        .back-btn {
            display: inline-block;
            margin-bottom: 20px;
            color: var(--primary);
            text-decoration: none;
            font-size: 16px;
            transition: all 0.3s;
        }

        .back-btn:hover {
            color: var(--secondary);
            transform: translateX(-5px);
        }

        .timestamp {
            color: #666;
            font-size: 12px;
        }

        .spotify-link {
            color: var(--primary);
            text-decoration: none;
            font-size: 12px;
        }

        .spotify-link:hover {
            color: var(--secondary);
        }

        .genre-badge {
            display: inline-block;
            padding: 4px 12px;
            background: #e9ecef;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            color: #495057;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <a href="/" class="back-btn">‚Üê Back to Home</a>
        
        <h1 style="color: var(--primary); margin-bottom: 10px;">Database Admin Panel</h1>
        <p style="color: #666; margin-bottom: 40px;">View all saved tracks, artists, and genres</p>

        <div class="stats-grid" id="stats">
            <div class="stat-card">
                <div class="stat-label">Total Songs</div>
                <div class="stat-number" id="songCount">-</div>
            </div>
            <div class="stat-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <div class="stat-label">Total Artists</div>
                <div class="stat-number" id="artistCount">-</div>
            </div>
            <div class="stat-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <div class="stat-label">Total Genres</div>
                <div class="stat-number" id="genreCount">-</div>
            </div>
        </div>

        <div class="section-header">
            <h2>All Songs</h2>
            <button class="refresh-btn" onclick="loadData()">üîÑ Refresh</button>
        </div>

        <div class="data-table">
            <table>
                <thead>
                    <tr>
                        <th>Album</th>
                        <th>Title</th>
                        <th>Artist</th>
                        <th>Genre</th>
                        <th>Added</th>
                        <th>Spotify</th>
                    </tr>
                </thead>
                <tbody id="songsTable">
                    <tr><td colspan="6" class="no-data">Loading...</td></tr>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        async function loadData() {
            try {
                const response = await fetch('/api/tracks');
                const data = await response.json();
                
                if (data.tracks && data.tracks.length > 0) {
                    // Update stats
                    document.getElementById('songCount').textContent = data.tracks.length;
                    
                    const uniqueArtists = new Set(data.tracks.map(t => t.artistName)).size;
                    document.getElementById('artistCount').textContent = uniqueArtists;
                    
                    const uniqueGenres = new Set(data.tracks.map(t => t.genreName)).size;
                    document.getElementById('genreCount').textContent = uniqueGenres;
                    
                    // Populate table
                    const tbody = document.getElementById('songsTable');
                    tbody.innerHTML = data.tracks.map(track => `
                        <tr>
                            <td>
                                ${track.imageUrl ? `<img src="${track.imageUrl}" alt="Album" class="album-img">` : 'üéµ'}
                            </td>
                            <td><strong>${track.songTitle}</strong></td>
                            <td>${track.artistName}</td>
                            <td><span class="genre-badge">${track.genreName}</span></td>
                            <td class="timestamp">${new Date(track.createdAt).toLocaleString()}</td>
                            <td>
                                ${track.previewUrl ? `<a href="${track.previewUrl}" target="_blank" class="spotify-link">üéß Listen</a>` : '-'}
                            </td>
                        </tr>
                    `).join('');
                } else {
                    document.getElementById('songsTable').innerHTML = 
                        '<tr><td colspan="6" class="no-data">No songs saved yet. Go to a genre page and start saving!</td></tr>';
                    document.getElementById('songCount').textContent = '0';
                    document.getElementById('artistCount').textContent = '0';
                    document.getElementById('genreCount').textContent = '0';
                }
            } catch (error) {
                console.error('Error loading data:', error);
                document.getElementById('songsTable').innerHTML = 
                    '<tr><td colspan="6" class="no-data" style="color: red;">Error loading data. Make sure the database is connected.</td></tr>';
            }
        }

        // Load data on page load
        loadData();
    </script>
</body>
</html>
